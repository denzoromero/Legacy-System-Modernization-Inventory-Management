@model FerramentariaTest.Models.VW_Usuario_NewViewModel
   
@{
    ViewData["Title"] = "Login";
    Layout = null; // This view doesn't use a layout
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="author" content="Muhamad Nauval Azhar">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="description" content="This is a login page template based on Bootstrap 5">
	<title>Login </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.7.1.min.js"></script>
	@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">*@
</head>

<body>

	<div class="container">
			@if (ViewBag.Error != null)
			{
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<img src="~/img/exclamation-triangle-fill.svg" /> @ViewBag.Error
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
	</div>

	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
						<img src="#" alt="Companylogo" width="400" />
					</div>
					<div class="card shadow-lg">
					
						<div class="card-body p-5">
						
							<h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
							@if (Model != null && Model.Retorno != null)
							{
								<div class="alert alert-warning alert-dismissible fade show" role="alert">
									<img src="~/img/exclamation-triangle-fill.svg" /> @Model.Retorno
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							}
							<form asp-action="Login">
								<div class="mb-3">
									<label class="mb-2 text-muted" for="email">Usuario</label>
										@*<input id="email" type="email" class="form-control" name="email" value="" required autofocus>*@
										@if (Model == null)
										{
										<input asp-for="SAMAccountName" value="" class="form-control" placeholder="AccountName" required autofocus/>
										}
										else
										{
										<input asp-for="SAMAccountName" value="@Model.SAMAccountName" class="form-control" placeholder="AccountName" required autofocus />
										}
									<div class="invalid-feedback">
										<span asp-validation-for="SAMAccountName" class="text-danger" style="color: #dc3545 !important;"></span>
									</div>
								</div>

								<div class="mb-3">
									<div class="mb-2 w-100">
										<label class="text-muted" for="password">Senha</label>
									@*	<a href="forgot.html" class="float-end">
											Forgot Password?
										</a>*@
									</div>
									@*<input id="password" type="password" class="form-control" name="password" required>*@
									@{
										if (Model == null)
										{
											<input asp-for="Senha" type="password" value="" class="form-control" placeholder="Senha" required />
										}
										else
										{
											<input asp-for="Senha" type="password" value=@Model.Senha class="form-control" placeholder="Senha" required />
										}
									}
									<div class="invalid-feedback">
										<span asp-validation-for="Senha" class="text-danger" style="color: #dc3545 !important;"></span>
									</div>
								</div>

								<div class="d-flex align-items-center">
									<div class="form-check">
										@*<input type="checkbox" name="remember" id="remember" class="form-check-input">
										<label for="remember" class="form-check-label">Remember Me</label>*@
									</div>
									<button type="submit" class="btn btn-primary ms-auto">
										Login
									</button>
								</div>
							</form>
						</div>
						<div class="card-footer py-3 border-0">
							<div class="text-center">
								SIB-Ferramentaria
								@*Don't have an account? <a href="register.html" class="text-dark">Create One</a>*@
							</div>
						</div>
					</div>
			
				</div>
			</div>
		</div>
	</section>

	<div class="text-center mt-12 text-muted">
		Copyright &copy; 2024 SIC-Ferramentaria - Sistemas Integrados Company - Ferramentaria - Developed by DJR
	</div>

</body>
</html>
