<table class="table align-middle mb-0" id="myTable">
    <thead class="bg-light">
        <tr>
            <th>Id</th>
            <th>Marca</th>
            <th>Status</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var marca in Model)
            {
                <tr>
                    <td class="small-column">
                        @marca.Id
                    </td>
                    <td>
                        @marca.Nome
                    </td>
                    <td>
                        @if (marca.Ativo == 1)
                        {
                            <span>Ativo</span>
                        }
                        else
                        {
                            <span>Inativo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@marca.Id">
                            <button type="button" class="btn btn-warning">
                                <img src="~/img/pencil-square.svg" /> Edit
                            </button>
                        </a>

                        @if (marca.Ativo == 1)
                        {
                            <a asp-action="Delete" asp-route-id="@marca.Id">
                                <button type="button" class="btn btn-danger">
                                    <img src="~/img/trash3-fill.svg" /> Delete
                                </button>
                            </a>
                        }
                    </td>
                </tr>
            }
        }
     
    </tbody>
    </table>

<div class="pagination-container">
