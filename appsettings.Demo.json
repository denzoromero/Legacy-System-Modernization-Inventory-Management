{
  "UseInMemoryDatabase": true,
  "DemoMode": true,
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Enrichers.Span" ],
    "MinimumLevel": {
      "Default": "information",
      "Override": {
        "Microsoft": "warning",
        "System": "warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} TraceId: {TraceId} SpanId: {SpanId} {NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}]\n{Message:lj}{NewLine}\nTransactionId: {TransactionId}\nTraceId: {TraceId}\nTraceIdGuid: {TraceIdGuid}\nProperties:\n{Properties}\n\n {Exception}\n\n---------------",
          "restrictedToMinimumLevel": "information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithTraceId",
      "WithSpan"
    ],
    "Properties": {
      "Application": "FerramentariaWeb",
      "Environment": "Demo"
    }
  },
  "AuditLog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Enrichers.Span" ],
    "MinimumLevel": {
      "Default": "information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "auditlogs/auditlog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}]\nUserId: {UserId}\nTransactionId: {TransactionId}\nAction: {Action}\nOutcome: {Outcome}\nTraceId: {TraceId}\nTraceIdGuid: {TraceIdGuid}\nMessage: {Message}\n----------------------------------------\n",
          "restrictedToMinimumLevel": "information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithTraceId",
      "WithSpan"
    ],
    "Properties": {
      "Application": "FerramentariaWeb",
      "Environment": "Demo",
      "LogType": "Audit"
    }
  }
}